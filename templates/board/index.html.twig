{% extends 'base.html.twig' %}

{% block title %}{{ parent()}}{% endblock %}

{% block body %}
    {% set boardCount = 2 %}
    <div class="container-fluid">
        {% for boardMember in boardMembers %}
            {% if boardCount is divisible by(2) %}
                <div class="row">
            {% endif %}
            {% include '/board/preview.html.twig' with {'board': boardMember.board, 'boardCount': boardCount} only %}
            {% if boardCount is not divisible by(2) %}
                </div>
            {% endif %}
            {% set boardCount = boardCount + 1 %}
        {% endfor %}
            {% if boardCount is divisible by(2) %}
                <div class="row">
            {% endif %}
                <div class="preview col-sm-6 col-md-6 col-xs-6 mt-2 border rounded">
                    <div class="row mr-2">
                        <div class="col-sm-12 colm-md-12 col-xs-6 h3">
                            Add new Board
                        </div>
                        <div class="col-sm-12 colm-md-12 col-xs-6">
                            <a href="/board/create">
                                <icon class="fas fa-plus-circle display-2 w-100 p-2"></icon>
                            </a>
                        </div>
                    </div>
            {% if boardCount is divisible by(2) %}
                </div>
            {% endif %}
    </div>
{% endblock %}
