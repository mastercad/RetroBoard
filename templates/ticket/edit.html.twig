{% form_theme form 'bootstrap_4_layout.html.twig' %}

<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{ 'create_new_ticket'|trans({}, 'titles') }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          {{ form_start(form) }}
          {{ form_row(form.content, {
            attr: {
              class: 'textarea-custom autoExpand', 
              rows: 3, 
              'data-min-rows': 3, 
              placeholder: 'your_text_here'|trans
            }
          }) }}
          {{ form_end(form) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">{{ 'save'|trans({}, 'labels') }}</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'close'|trans({}, 'labels') }}</button>
      </div>
    </div>
  </div>
</div>