{
    "name": "byte-artist/retro-board",
    "description": "retro board web project",
    "type": "project",
    "license": "proprietary",
    "require": {
        "composer/package-versions-deprecated": "dev-master",
        "doctrine/annotations": "^1.10",
        "doctrine/doctrine-bundle": "^2.3",
        "doctrine/doctrine-migrations-bundle": "^2.2",
        "doctrine/orm": "^2.7",
        "foxworth42/oauth2-okta": "^1.0",
        "knpuniversity/oauth2-client-bundle": "^2.8",
        "league/oauth2-github": "^2.0",
        "league/oauth2-google": "^4.0",
        "stevenmaguire/oauth2-microsoft": "^2.2",
        "symfony/console": "^5.3",
        "symfony/dotenv": "^5.3",
        "symfony/flex": "^1.4",
        "symfony/form": "^5.3",
        "symfony/framework-bundle": "^5.3",
        "symfony/mercure-bundle": "^0.3.2",
        "symfony/monolog-bundle": "^3.4",
        "symfony/proxy-manager-bridge": "^5.3",
        "symfony/requirements-checker": "^2.0",
        "symfony/security-bundle": "^5.3",
        "symfony/swiftmailer-bundle": "^3.5",
        "symfony/translation": "^5.3",
        "symfony/twig-bundle": "^5.3",
        "symfony/validator": "^5.3",
        "symfony/yaml": "^5.3"
    },
    "scripts": {
        "phpstan": "phpstan analyse -c phpstan.neon src tests --level 5 --no-progress",
        "tests": "bin/phpunit",
        "ci": [
            "@phpstan",
            "@tests"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "requirements-checker": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "require-dev": {
        "symfony/maker-bundle": "^1.32",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mikey179/vfsstream": "^1.6",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.90",
        "phpstan/phpstan-doctrine": "^0.12.39",
        "phpstan/phpstan-phpunit": "^0.12.20",
        "phpstan/phpstan-symfony": "^0.12.37",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/browser-kit": "^5.3",
        "symfony/css-selector": "^5.3",
        "symfony/phpunit-bridge": "^5.3",
        "symfony/stopwatch": "^5.3",
        "symfony/web-profiler-bundle": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true
        }
    }
}
